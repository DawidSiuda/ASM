{
  "tasks": [
    {
      "type": "shell",
      "label": "gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "${workspaceFolder}/main.c",
        "${workspaceFolder}/functions.s",
        "-o",
        "${workspaceFolder}/a.out"
      ],
      "options": {
        "cwd": "/usr/bin"
      }
    }
  ],
  "version": "2.0.0"
}

